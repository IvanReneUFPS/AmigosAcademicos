<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <script src="https://kit.fontawesome.com/0dc3b1d201.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </style>
</head>

<body>
    <main class="main_login">
        <div class="shadow-2xl bg-white rounded-md p-8 text-center">
            <img class="w-40 mx-auto" src="/images/logo2.jpg">
            <p class="p-4 text-gray-600 font-semibold">Un lugar para compartir conocimientos y entender mejor el mundo
            </p>
            <div class="flex">
                <div class="flex-col flex-1 space-y-3 p-1.5">
                    <div class="mt-1" id="iniciarGithub">
                        {{> modal/iniciarSesion}}
                    </div>
                    <div class="mt-1" id="modalRegistrar" style="display: none;">
                        {{> modal/registrarUsuario}}
                    </div>
                </div>
                <div class="flex-col flex-1 space-y-3 p-1.5">
                    <form class="space-y-3 mt-1" action="/auth/signup" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control w-full" name="email"
                                placeholder="Correo electrónico" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control w-full" name="password" placeholder="Contraseña"
                                autocomplete="off" required>
                        </div>
                        <div class="form-group text-left">
                            <button type="submit" class="btn btn-success ml-0 mr-auto">Iniciar sesión</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>

<script>
    window.onload = () => {
        document.querySelector("#registrarUsuario").addEventListener("click", mostrarRegistrar);
        document.querySelector("#registrarGithub").addEventListener("click", mostrarGithub);
    }
    function mostrarRegistrar() {
        document.querySelector("#iniciarGithub").style.display = "none"
        document.querySelector("#modalRegistrar").style.display = "block"
    }
    function mostrarGithub() {
        document.querySelector("#iniciarGithub").style.display = "block"
        document.querySelector("#modalRegistrar").style.display = "none"
    }
</script>

</html>