<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content" action="/post/nueva" method="POST" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Añadir una pregunta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group mt-1 p-2">
                    <textarea id="textarea" class="form-control border-bottom text-area__pregunta" type="text"
                        name="titulo" required rows="1"
                        placeholder="Empieza la pregunta con ¿Qué?, ¿Cómo?, ¿Por qué?, etc"
                        autocomplete="off"></textarea>
                </div>
                <div class="form-group mt-1 border-top p-2">
                    <select class="form-control" name="materia" required>
                        <option value="">Seleccione una categoría</option>
                        {{#each materias}}
                        <option value="{{this._id}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mt-1 border-top p-2">
                    <textarea class="form-control" id="contenido" name="contenido"
                        placeholder="Especifica cual es tu problema" cols="30" rows="10" required></textarea>
                </div>
                <div class="form-group mt-1 border-top p-2">
                    <label for="fotografia">Fotografia</label>
                    <input type="file" name="fotografia">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Añadir pregunta</button>
            </div>
        </form>
    </div>
</div>